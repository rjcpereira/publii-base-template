{
    "name": "publii-base-template",
    "version": "0.1.0.0",
    "author": "Ricardo Pereira <https://rjcpereira.com/>",
    "menus": {
        "main": "Menu Primário",
        "secondary": "Menu Secundário",
        "other": "Outros Links",
        "socials": "Redes Sociais",
        "mentor": "Mentor"
    },
    "renderer": {
        "relatedPostsNumber": 3,
        "renderRelatedPosts": true,
        "renderSimilarPosts": false,
        "renderPrevNextPosts": true,
        "createContentStructure": true,
        "createTagPages": true,
        "createAuthorPages": true,
        "createTagsList": true,
        "createSearchPage": true,
        "create404page": true
    },
    "supportedFeatures": {
        "blockEditor": true,
        "tagsList": true,
        "tagImages": true,
        "authorImages": true,
        "searchPage": true,
        "errorPage": true
    },
    "config": [

        {
            "name": "postsPerPage",
            "label": "Posts per page",
            "value": 5,
            "type": "number"
        },
        {
            "name": "tagsPostsPerPage",
            "label": "Tags posts per page",
            "value": 5,
            "type": "number"
        },
        {
            "name": "authorsPostsPerPage",
            "label": "Authors posts per page",
            "value": 5,
            "type": "number"
        },
        {
            "name": "excerptLength",
            "label": "Excerpt length",
            "value": 45,
            "type": "number"
        },
        {
            "name": "logo",
            "label": "Website logo",
            "value": "",
            "type": "upload",
            "upload": true
        }
    ],
    "customConfig": [
        {
            "name": "separator",
            "type": "separator",
            "label": "Favicon",
            "group": "Favicon",
            "size": "small"
        },
        {
            "name": "faviconImage",
            "label": "Favicon file",
            "group": "Favicon",
            "note": "The ideal size of a favicon is 16x16 pixels. Save your favicon as either favicon.png or favicon.ico",
            "value": "",
            "type": "smallupload",
            "upload": true
        },
        {
            "name": "faviconExtension",
            "label": "Favicon extension",
            "group": "Favicon",
            "value": "image/x-icon",
            "type": "select",
            "options": [
                {
                    "label": ".ico",
                    "value": "image/x-icon"
                },
                {
                    "label": ".png",
                    "value": "image/png"
                }]
        },

        {
            "name": "separator",
            "type": "separator",
            "label": "Home",
            "group": "Home",
            "size": "small"
        },
        {
            "name": "frontSource",
            "label": "Front page",
            "group": "Home",            
            "value": "default",
            "type": "radio",
            "options": [
                {
                    "label": "Latest posts",
                    "value": "default"
                },
                {
                    "label": "Main post",
                    "value": "main"
                }
            ]
        }, 
        {
            "name": "frontPost",
            "label": "Main post",
            "group": "Home",
            "note": "We strongly recommended 'hide' and 'noindex' the selected post to avoid the duplicate content issue.",
            "value": "",
            "type": "posts-dropdown", 
            "dependencies": [
            {
                "field": "frontSource",
                "value": "main"
            }]
        },

        {
            "name": "separator",
            "type": "separator",
            "label": "Hero",
            "group": "Hero",
            "size": "small"
        },
        {
            "name": "heroImage",
            "label": "Image",
            "group": "Hero",
            "value": "",
            "type": "upload",
            "upload": true
        },
        {
            "name": "heroAlt",
            "label": "Image Alt text",
            "group": "Hero",
            "placeholder": "Add an alternative text to the hero image",
            "value": "",
            "type": "text"
        },
        {
            "name": "heroCaption",
            "label": "Image Caption",
            "group": "Hero",
            "placeholder": "Add text caption to the hero image",
            "value": "",
            "type": "text"
        }
    ],
    "customElements": [],
    "postConfig": [],
    "postTemplates": {},
    "tagTemplates": {},
