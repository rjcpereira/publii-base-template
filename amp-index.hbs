{{> amp-head}}

{{#checkIf @config.custom.frontSource '==' "post" }}

   {{> amp-frontpage-post}}
{{else}}

    <main>

        {{#each posts}}
        
            <article>           
                {{#featuredImage}}
                    {{#if url}}
                    <a href="{{../url}}">
                        {{> amp-image}}
                    </a>
                    {{/if}}
                {{/featuredImage}}           
                
                <div>
                    <h2>
                        <a href="{{url}}"> {{title}} </a>
                    </h2>                
                    <p>{{{excerpt}}}</p>        
                </div>          
            </article>
        {{/each}}

        {{> amp-pagination}}        
    </main>

{{/checkIf}}	
{{> amp-footer}}