{{> head}}
{{> top}}
<main>

   <div class="grid">
      {{#author}}
         <header>

            {{> post-image}}
            
            <div>          
               {{#if avatar}}
                  <img 
                        src="{{avatar}}" 
                        {{ lazyload "lazy" }} 
                        alt="{{name}}"
                     >
               {{/if}}
               <h1>
                  {{name}}
                  <sup>({{postsNumber}})</sup>
               </h1>
               {{#if description}}
                  <p>{{description}}</p>
               {{/if}}   
               {{#if website}}
                  <p>
                     {{{ icon 'website' }}}
                     <a href="{{website}}" target="_blank" rel="nofollow noreferrer noopener">{{ website }}</a>
                  </p>
               {{/if}}  
            </div>
         </header>
      {{/author}}
      {{#each posts}}
         <article>
            <header>
               <h2>
                  <a href="{{url}}">
                     {{title}}
                  </a>
               </h2>
            </header>
            <div>
               {{#if hasCustomExcerpt}}
                  {{{ excerpt }}}
               {{else}}
                  <p>{{{ excerpt }}}</p>
               {{/if}}
            </div>
         </article>
      {{/each}}
      {{> pagination}}
   </div>
</main>
{{> footer}}
